{{> navbar}}

<section>
  <div class="container">
    <form class="w-50" action="/user/confirm" method="post">
      <div class="mb-3">
        <label for="inputChineseName" class="form-label">中文姓名</label>
        <input
          type="text"
          class="form-control"
          id="inputChineseName"
          name="name"
          value="{{user.Name}}"
          placeholder="Chinese Name"
          required
        />
      </div>
      <div class="mb-3">
        <label for="inputEnglishName" class="form-label">英文姓名</label>
        <input
          type="text"
          class="form-control"
          id="inputEnglishName"
          name="nameEng"
          value= "{{user.NameEng}}"
          placeholder="English Name"
          required
        />
      </div>
      <div class="mb-3 w-50">
        <label for="inputAddress" class="form-label">檢測地址</label>
        <div id="twzipcode">
          <div data-role="county" data-style="city form-select mb-2" data-value={{user.City}}></div>
          <div data-role="district" data-style="town form-select" data-value={{user.Town}}></div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">確認</button>
    </form>
  </div>
</section>


<script>
$("#twzipcode").twzipcode({
  countyName: "city", 
  districtName: "town"
});

const selectElements = document.querySelectorAll("select").forEach((selectElement) => {
  selectElement.required = true
})

</script>